{
    "name": "kulishkin/word_stats",
    "require": {
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "psr-4": {
            "WordStats\\": "./src"
        },
        "files": [
            "./src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "WordStats\\Tests\\": "./tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --color=always",
        "cover": "vendor/bin/phpunit  --color=always --coverage-html .coverage",
        "fix": "/usr/local/bin/php-cs-fixer fix --config=.php_cs.dist $(find ./src ./tests -name '*.php')"
    }
}
